# Local Development Environment

# Application
APP_NAME=cerberus
APP_ENV=local
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cerberus
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=5
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cerberus

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=5

# Security
SECRET_KEY=local-dev-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_PREFIX=sk-

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# MCP Proxy Settings
MCP_REQUEST_TIMEOUT_SECONDS=30.0
MCP_MAX_RETRIES=2
MCP_MAX_KEEPALIVE_CONNECTIONS=20
MCP_MAX_CONNECTIONS=100

# Proxy Header Forwarding
PROXY_FORWARD_AUTHORIZATION=true
PROXY_FORWARD_HEADERS=
PROXY_BLOCKED_HEADERS=cookie,set-cookie,x-api-key
PROXY_FORWARD_ALL_HEADERS=false
