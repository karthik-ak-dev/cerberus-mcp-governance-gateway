# Staging Environment
# Copy to stage.env and fill in real values

# Application
APP_NAME=cerberus
APP_ENV=staging
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/cerberus_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis
REDIS_URL=redis://redis-host:6379/0
REDIS_POOL_SIZE=10

# Security (generate: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_PREFIX=sk-

# CORS
CORS_ORIGINS=["https://staging.yourdomain.com"]

# MCP Proxy Settings
MCP_REQUEST_TIMEOUT_SECONDS=30.0
MCP_MAX_RETRIES=2
MCP_MAX_KEEPALIVE_CONNECTIONS=20
MCP_MAX_CONNECTIONS=100

# Proxy Header Forwarding
PROXY_FORWARD_AUTHORIZATION=true
PROXY_FORWARD_HEADERS=
PROXY_BLOCKED_HEADERS=cookie,set-cookie,x-api-key
PROXY_FORWARD_ALL_HEADERS=false
